!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %title= content_for?(:title) ? yield(:title) : "Carogoverno"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "bootstrap.min", "stile"
    = javascript_include_tag "jquery-1.7.2.min", "bootstrap.min", "jquery_ujs", "posts"
    = csrf_meta_tags
    = yield(:head)
    = render 'shared/ga'
  %body
    = render :partial => "shared/socialinit"
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    %section.container#news
      .alert.alert-block
        %i.icon-bullhorn
        %span#tweet
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield
    %footer.navbar-fixed-bottom.navbar-inner
      .container
        .pull-left
          &copy;Copyright 2012 <span class="carogoverno">CaroGoverno.it</span> per info <a href="mailto:info@carogoverno.it">info@carogoverno.it</a> - All rights reserved
        .pull-right
          .addthis_toolbox.addthis_default_style.addthis_32x32_style
            %a.addthis_button_facebook{:title =>'Condividi CaroGoverno su Facebook', :rel => 'tooltip'}
            %a.addthis_button_twitter{:title =>'Pubblica CaroGoverno su Twitter', :rel => 'tooltip'}
            %a.addthis_button_email{:title =>'Invita i tuoi amici su CaroGoverno', :rel => 'tooltip'}
            <script type="text/javascript">var addthis_config = {ui_language: "it"};</script>
            <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4fafafcd73d9308e"></script>
.modal
  .modal-header
    %button.close(data-dismiss="modal") &times;
    %h3 Modal header
  .modal-body
  .modal-footer
  %a.btn(href="#") Chiudi
