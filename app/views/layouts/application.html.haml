!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %title= content_for?(:title) ? yield(:title) : "Carogoverno"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "bootstrap.min", "stile"
    -#= javascript_include_tag :application
    = javascript_include_tag "jquery-1.7.2.min", "bootstrap.min", "jquery_ujs", "posts"
    = csrf_meta_tags
    = yield(:head)
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    %section.container#news
      .alert.alert-block
        %i.icon-bullhorn
        news qui??????
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield
    %footer.navbar-fixed-bottom.navbar-inner
      .container
        .pull-left
          &copy;Copyright 2012 <span class="carogoverno">CaroGoverno.it</span> designed and developed by Luca Pradovera &amp; Christian Campoli - All rights reserved
        .pull-right
          .addthis_toolbox.addthis_default_style.addthis_32x32_style
            %a.addthis_button_facebook
            %a.addthis_button_twitter
            %a.addthis_button_email
            <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4fafafcd73d9308e"></script>
.modal
  .modal-header
    %button.close(data-dismiss="modal") &times;
    %h3 Modal header
  .modal-body
  .modal-footer
  %a.btn(href="#") Chiudi
